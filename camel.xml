<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:c="http://camel.apache.org/schema/spring"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

<bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent"> 
	<property name="brokerURL" value="tcp://localhost:61616"/>
</bean>

<c:camelContext>

	<c:route>
		<c:from uri="timer:timer"/>
		<c:bean ref="MyProcessor"/>
                <c:convertBodyTo type="String"/>
		<c:to uri="log:TIMER-LOGGER?level=WARN"/>
		<c:to uri="solace-jcsmp:topic:sol/in"/>
	</c:route>

	<c:route>
		<c:from uri="solace-jcsmp:queue:solaceOut"/>
		<c:bean ref="MyProcessor"/>
		<c:to uri="log:RABBIT-LOGGER?level=WARN"/>
		<c:to uri="rabbitmq://localhost/rabbitIn?queue=rabbitQueueIn&amp;autoDelete=false"/>
	</c:route>

